{
    "name": "mvqn/ucrm-plugin-xero",
    "description": "UCRM Plugin for Xero.",
    "license": "MIT",
    "authors": [
        {
            "name": "Ryan Spaeth",
            "email": "rspaeth@mvqn.net"
        }
    ],
    "config": {
        "vendor-dir": "zip/vendor"
    },
    "require": {
        "php": "~7.1",
        "ext-json": "*",
        "ext-curl": "*",
        "ext-zip": "*",
        "ext-pdo": "*",
        "mvqn/synchronization": "~1",
        "mvqn/rest": "~1",
        "mvqn/rest-ucrm": "~1",
        "mvqn/ucrm-common": "~1",

        "calcinai/xero-php": "~1.8"
    },
    "require-dev": {
        "phpunit/phpunit": "7.2.7",
        "vlucas/phpdotenv": "2.5.1"
    },
    "autoload": {
        "psr-4": {
            "UCRM\\": "zip/src/UCRM/",
            "Xero\\": "zip/src/Xero/",
            "MVQN\\": "zip/src/MVQN/"
        }
    }
}